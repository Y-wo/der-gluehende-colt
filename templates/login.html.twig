{% extends 'base.html.twig' %}

{% block title %}
    Login
{% endblock title %}

{% block main_content %}

    {% include 'navbar.html.twig' %}

    {% if message is defined and message is not null %}
        <p class="info-message">{{ message }}</p>
    {% endif %}

    <div class="form_bg text-center vh-100">
        <div class="container-md">
            <div class="row">
                <div class="col">
                    <form class="form_horizontal" action="{{ path('check_login') }}" method="post">
                        <h3 class="title">Login</h3>
                        <div class="form-group">
                            <span class="input-icon"><i class="fa fa-user"></i></span>
                            <input type="text" class="memberId" name="memberId" placeholder="Benutzer-ID">
                        </div>
                        <div class="form-group">
                            <span class="input-icon"><i class="fa fa-lock"></i></span>
                            <input type="password" class="password" name="password" placeholder="Passwort">
                        </div>
                        <button class="btn btn-outline-light" type="submit">Einloggen</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


{% endblock %}