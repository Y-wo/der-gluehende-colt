{% extends "base.html.twig" %}

{% block title %}
    Mitglieder
{% endblock title %}

{% block main_content %}

    {% include 'navbar.html.twig' with {
        tab : 'members'
    }%}

    <script type="module" src="js/members.js"></script>

    <div class="container-md member-div h-100 vh-100">

        <h2 class="text-decoration-underline">Mitglieder</h2>

        {% if message is defined and message is not null %}
            <p class="info-message">{{ message }}</p>
        {% endif %}

        <div class="d-flex justify-content-end">
            <a href="{{ path('new_member') }}" class="btn btn-dark ">Mitglied anlegen</a>
        </div>

        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col"> Mitgliedsnummer</th>
                <th scope="col">Vorname</th>
                <th scope="col">Nachname</th>
                <th scope="col">Abteilung</th>
                <th scope="col">Anwesend</th>
                <th scope="col">Berechtigt?</th>
            </tr>
            </thead>
            <tbody class="table-body-members">
            </tbody>
        </table>

    </div>

{% endblock %}